<!-- abstract object that rails uses to build a form  -->
<%= form_for @task do |f| %>
	<%= f.label "Title:" %><br>
	<%= f.text_field :title %><br>

	<%= f.label "Details" %><br>
	<%= f.text_area :details %><br>

	<% if request.path.include?("edit") %>
		<%= f.label "Completed?" %>
		<%= f.check_box :completed %><br>
	<% end %>
	
	<%= f.submit %>
<% end %>